<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"


        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout

            android:background="@drawable/rech_res_shape"

            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tireresrech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/cardImrestrech"

                android:layout_marginStart="15dp"

                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/cardImrestrech"
                android:text="Restaurant Alger"
                android:textColor="@color/Black"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/decrresrech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/tireresrech"
                android:layout_marginStart="11dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@id/cardImrestrech"
                android:gravity="center"
                android:text="owefnwfe rverv efwefewf \n wef wefewfn\nwef"
                android:textColor="@color/Black"
                android:textSize="11sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardImrestrech"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rech_res_shape"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="20dp">


                <ImageView


                    android:id="@+id/imageRestrech"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@drawable/rest"


                    />


            </androidx.cardview.widget.CardView>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>