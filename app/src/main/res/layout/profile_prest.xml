                android:textColor="@color/Black"
                android:textSize="11sp" />


        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Horraires"
            android:textColor="@color/Navy"
            android:textSize="20sp"
            android:textStyle="normal" />




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rech_res_shape">

                <TextView
                    android:id="@+id/Horraires"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="5dp"
                    android:text="lij fej ewfoi weif iewjf ewjf efwfewuhfewu\nefw fw febf eue enef eff efie fe efihfe ef feif efoenf enf efief iefj eij ci jcei jecicneinc cine\nenceifeifefiheihefiehfeih  fef ejfeijf "
                    android:textColor="@color/Black"
                    android:textSize="11sp" />
            </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Commentaires"
            android:textColor="@color/Navy"
            android:textSize="20sp"
            android:textStyle="normal" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Comment_sec_prest"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">




        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>


</ScrollView>